<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="icon" type="image/png" href="images/IconLogo.png">
    <link rel="stylesheet" href="css/style.css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.3.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.14/jspdf.plugin.autotable.min.js"></script>

    <style>
        header nav a {
            color: white;
            text-decoration: none;
            margin-right: 1em;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table th,
        table td {
            padding: 0.5em;
            border: 1px solid gray;
        }
        table th {
            text-align: left;
            background-color: #eee;
        }
        table td a {
            color: blue;
            text-decoration: none;
            margin-right: 0.5em;
        }
        button {
            background-color: #F51720;
            color: white;
            padding: 0.5em 1em;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            font-weight: 900;
            scale: 1.05;
        }
    </style>
</head>
<body>
    <main>
        <div class="admin-header">
            <div class="logo">
                <p>Shamba<span>Afrik</span></p>
            </div>
            <h1>Admin</h1>
        </div>
        <h2 class="">Users</h2>
        <table>
            <thead>
                <tr>
                    <th>UserID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Registration Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(function(row) { %>
                <tr>
                    <td><%= row.userId %></td>
                    <td><%= row.firstName %></td>
                    <td><%= row.lastName %></td>
                    <td><%= row.email %></td>
                    <td><%= row.dateOfRegistration %></td>
                    <td>
                        <form action="/delete" method="post">
                            <input type="hidden" name="id" value="<%= row.userId %>">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <button id="download-pdf">Download as PDF</button>
        
        <script>
            function generatePdf() {
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF();
                const date = new Date();
                const timestamp = date.toLocaleString();

                doc.text('ShambaAfrik User Logging Report', 20, 20);
                doc.setFontSize(10);
                doc.text(`Downloaded on: ${timestamp}`, 20, 30);

                // Get the table headers and rows
                const table = document.querySelector("table");
                const headers = Array.from(table.querySelectorAll("th")).map(header => header.innerText);
                const rows = Array.from(table.querySelectorAll("tbody tr")).map(row => {
                    return Array.from(row.querySelectorAll("td")).map(cell => cell.innerText);
                });

                // Include headers and rows in the PDF
                doc.autoTable({
                    head: [headers],
                    body: rows,
                    startY: 40, // Adjust start position to avoid overlap with title and timestamp
                });

                doc.save('users_logging_report.pdf');
            }

            document.getElementById('download-pdf').addEventListener('click', generatePdf);
        </script>
    </main>
</body>
</html>
